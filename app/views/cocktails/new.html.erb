<div class="container">

  <div class="cocktail-box">
  <h2>Add a cocktail recipe</h2>

    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Add your cocktail", class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>

