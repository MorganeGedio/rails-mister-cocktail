<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "Morgane.png"%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <h1>COCKTAIL HOUR</h1>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Add a cocktail", new_cocktail_path, class: 'btn btn-primary' %>
      </li>
    </ul>
  </div>
</div>


<div class="container">

</div>

<div class="container mt-3">
  <div class="cards">

<% @cocktails.each do |cocktail| %>

    <% if cocktail.photo.present? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url('<%= cl_image_path cocktail.photo, height: 200, width: 300, crop: :fill %>')">

            <%= link_to cocktail.name , cocktail_path(cocktail), :class => "card-text" %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= link_to cocktail.name , cocktail_path(cocktail), :class => "card-text" %>
          </div>
        <% end %>

       <% end %>

      </div>
</div>


