<div class="container">

<h1>  <%= @cocktail.name  %> </h1>

  <div class="description">
    <%= cl_image_tag @cocktail.photo, height: 600, width: 500, crop: :fill %>
      <div class="ingredient">
        <h3>Ingredients : </h3>

          <ul class="list">
            <% @cocktail.doses.each do |dose| %>
              <li class="list-items">
                <%= dose.ingredient.name %> -
                <%= dose.description %> -
                <%= link_to "ðŸ—‘", dose_path(dose), method: :delete,
              data: { confirm: "Are you sure?" } %>
              </li>
            <% end %>
          </ul>

      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail[:id]), class: 'btn btn-primary' %>
      <%= link_to "Back to list", root_path, class: 'btn btn-primary' %>
     </div>

  </div>

</div>
